<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F0F0"
    tools:context="fragment.User_fragment">


    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toRightOf="@id/user_icon"
        app:layout_constraintTop_toTopOf="@id/user_icon"/>
    <TextView
        android:id="@+id/user_level"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#000"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintLeft_toRightOf="@id/user_icon"/>
    <ImageView
        android:id="@+id/img_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/details"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_playlist"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/user_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/img_1"
            android:layout_marginTop="10dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/icon_friend"
            android:layout_marginEnd="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/img_2"
            app:layout_constraintBottom_toTopOf="@id/text_friend" />
        <TextView
            android:id="@+id/text_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:textColor="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/img_1"/>
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_cloud"
            app:layout_constraintTop_toTopOf="@id/img_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/img_2"
            app:layout_constraintLeft_toLeftOf="@id/img_2"/>
        <ImageView
            android:id="@+id/img_3"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/icon_used_play"
            app:layout_constraintTop_toTopOf="@id/img_1"
            app:layout_constraintLeft_toRightOf="@id/img_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_play"
            android:textSize="12sp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/img_3"
            app:layout_constraintLeft_toLeftOf="@id/img_3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="@drawable/shape_playlist"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      app:layout_constraintTop_toBottomOf="@id/con"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <TextView
          android:id="@+id/my_playlist"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/my_playlist"
          android:textColor="#9E9E9E"
          android:textSize="12sp"
          android:layout_marginTop="10dp"
          android:layout_marginStart="18dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"/>
      <TextView
          android:id="@+id/add_playlist"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:text="+"
          android:textSize="20sp"
          android:gravity="center"
          android:textColor="#9E9E9E"
          android:layout_marginEnd="30dp"
          android:layout_marginTop="3dp"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycle_laylist"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_marginEnd="18dp"
          app:layout_constraintLeft_toLeftOf="@id/my_playlist"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/add_playlist"
          app:layout_constraintBottom_toBottomOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>