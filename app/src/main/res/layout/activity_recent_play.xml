<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Recent_playActivity">
    <ImageView
        android:id="@+id/back"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15dp"
        android:onClick="back_touser"
        android:src="@drawable/icon_backto_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_play"
        android:textColor="#000"
        android:textSize="22sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintLeft_toRightOf="@id/back"/>

    <ImageView
        android:id="@+id/play_all"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:onClick="play_all"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_play_red"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="play_all"
        android:text="@string/play_all"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/play_all"
        app:layout_constraintLeft_toRightOf="@id/play_all"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/play_all"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>